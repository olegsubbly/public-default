{
  "setupTasks": [
    {
      "name": "Install Dependencies",
      "command": "pnpm install"
    },
    {
      "name": "Install",
      "command": "npm install -g netlify-cli"
    }
  ],
  "tasks": {
    "dev": {
      "name": "Start Dev Server",
      "command": "pnpm run dev",
      "runAtStart": true,
      "preview": {
        "port": 3000
      },
      "restartOn": {
        "files": ["pnpm-lock.yaml", "**/*.(css|scss)"],
        "clone": true,
        "resume": false
      }
    },
    "install": {
      "name": "Install Dependencies",
      "command": "pnpm install",
      "runAtStart": true,
      "restartOn": {
        "files": ["package.json"]
      }
    }
  }
}
